# Server Configuration
PORT=3515
NODE_ENV=development
jwtSecret=your_jwt_secret_key_here

# Database Configuration
# These are currently hardcoded in config/dbconnection.js as fallback, 
# but it's recommended to move them here.
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_NAME=happy_english
DB_PORT=3306

# Cloudflare R2 Configuration (S3 Compatible)
CLOUDFLARE_R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=<your_access_key_id>
CLOUDFLARE_R2_SECRET_ACCESS_KEY=<your_secret_access_key>
CLOUDFLARE_R2_BUCKET_NAME=trackbox
CLOUDFLARE_R2_PUBLIC_URL=https://<your_pub_bucket_url>.r2.dev

# Firebase Configuration
# You can provide the service account JSON as a stringified environment variable
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Apple APNs Configuration (for push notifications)
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=./voip_key.p8
APPLE_BUNDLE_ID_STUDENT=
APPLE_BUNDLE_ID_STAFF=

# OpenAI API Configuration
OPENAI_API_KEY=<your_openai_api_key>

# WhatsApp API Configuration
WHATSAPP_BEARER_TOKEN=
